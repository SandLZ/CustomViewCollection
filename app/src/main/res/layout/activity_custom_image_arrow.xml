<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.sandlz.customviewcollection.module.image.CustomImageArrowActivity">

    <me.sandlz.customviewcollection.widget.CustomArrowImage
        android:id="@+id/image_custom_view"
        android:layout_width="180px"
        android:layout_height="180px"
        android:src="@mipmap/favicon200"
        app:arrowSrc="@mipmap/im_icon_common"
        app:position="top_left"
        app:fixRate="2.5"
        app:allowRotation="true" />
    <me.sandlz.customviewcollection.widget.CustomArrowImage
        android:id="@+id/image_custom_view2"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginTop="20px"
        android:layout_below="@id/image_custom_view"
        android:src="@mipmap/favicon200"
        app:position="bottom_left"
        app:borderWidth="2"
        app:borderColor="#AAD3EE"
        app:fixRate="2.5"
        app:allowRotation="true" />
    <me.sandlz.customviewcollection.widget.CustomArrowImage
        android:id="@+id/image_custom_view3"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/image_custom_view"
        android:src="@mipmap/favicon200"
        app:arrowSrc="@mipmap/im_icon_common"
        app:borderWidth="0"
        app:position="top_right"
        app:fixRate="2.5"
        app:allowRotation="true" />
    <me.sandlz.customviewcollection.widget.CustomArrowImage
        android:id="@+id/image_custom_view4"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_below="@id/image_custom_view3"
        android:layout_toRightOf="@id/image_custom_view2"
        android:src="@mipmap/favicon200"
        app:arrowSrc="@mipmap/im_icon_common"
        app:position="bottom_right"
        app:fixRate="2.5"
        app:allowRotation="true" />

</com.zhy.autolayout.AutoRelativeLayout>
